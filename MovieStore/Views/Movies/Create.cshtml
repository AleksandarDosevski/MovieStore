@model MovieStore.Models.MovieViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="bg-dark text-white text-center p-3 crud-title">Add a movie</h1>
<div class="container">
    <hr />
    <div class="wrapper">
        <div class="row">
            <div class="col-12 col-md-12">
                <form asp-action="Create" name="moviecreate">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label">Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Enter title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="row form-group">
                        <div class="col-12 col-md-6">
                            <div class="form-group">
                                <label asp-for="YearOfRelease" class="control-label">Year Of Release</label>
                                <input asp-for="YearOfRelease" class="form-control" placeholder="Enter year of release" />
                                <span asp-validation-for="YearOfRelease" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-12 col-md-6">
                            <label asp-for="CategoryID" class="control-label">Category Name</label>
                            @Html.DropDownListFor(x => Model.CategoryID, new SelectList(Model.Categories, "Value", "Text"),
                           htmlAttributes: new { @class = "form-control", id = "Category" })
                            <span asp-validation-for="CategoryID" class="text-danger"></span>
                            <input asp-for="CategoryName" class="form-control" hidden id="CategoryName" />
                            <a class="btn btn-success btn-sm btn-add-new-custom"
                               data-toggle="modal" data-target="#CategoryModal">Add New Category</a>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-12 col-md-12">
                            <label asp-for="DirectorID" class="control-label">Director Name</label>
                            @Html.DropDownListFor(x => Model.DirectorID, new SelectList(Model.Directors, "Value", "Text"),
                           htmlAttributes: new { @class = "form-control", id = "Director" })
                            <span asp-validation-for="DirectorID" class="text-danger"></span>
                            <input asp-for="DirectorName" class="form-control" hidden id="DirectorName" />
                            <a class="btn btn-success btn-sm btn-add-new-custom"
                               data-toggle="modal" data-target="#DirectorModal">Add New Director</a>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-12 col-md-6">
                            <div class="form-group">
                                @*  *@
                                <label asp-for="Price" class="control-label">Price</label>
                                <input asp-for="Price" class="form-control" placeholder="Enter price" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-12 col-md-6">
                            <div class="form-group">
                                <label asp-for="Copies" class="control-label"></label>
                                <input asp-for="Copies" class="form-control" placeholder="Enter number of copies" />
                                <span asp-validation-for="Copies" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-12 col-md-6">
                            <div class="form-group">
                                <label asp-for="Language" class="control-label">Language</label>
                                <input asp-for="Language" class="form-control" placeholder="Enter language" />
                                <span asp-validation-for="Language" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-12 col-md-6">
                            <div class="form-group">
                                <label asp-for="Shipping" class="control-label">Shipping</label>
                                <input asp-for="Shipping" class="form-control" placeholder="Enter type of shipping" />
                                <span asp-validation-for="Shipping" class="text-danger"></span>
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <label asp-for="Country" class="control-label">Country</label>
                        <input asp-for="Country" class="form-control" placeholder="Enter country of origin" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>

                    <input type="hidden" asp-for="PhotoURL" hidden id="PhotoURL" />
                  


                    <div class="form-group">
                        <label asp-for="Description" class="control-label">Description</label>
                        <textarea asp-for="Description" rows="12" class="form-control" placeholder="Enter movie description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-block btn-primary" />
                    </div>
                </form>

                <div class="form-group">
                    <div class="col-12 col-md-12">
                        <label> Upload Photo - Movie Cover</label>
                    </div>
                    <div class="col-12 col-md-12">
                        <div class="row">
                            <input type="file" #file accept="image/*" id="photoUpload" />
                            <button class="btn btn-custom-upload btn-block" id="uploadphoto">Upload Photo</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- Category Modal -->
    <div class="modal fade" id="CategoryModal" tabindex="-1" role="dialog"
         aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add New Category</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="CreateCategoryName" class="control-label">
                            Category Name
                        </label>
                        <input asp-for="CreateCategoryName" class="form-control" />
                        <span asp-validation-for="CreateCategoryName" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-success" data-dismiss="modal" id="addNewCategory">
                        Create
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Director Modal -->
    <div class="modal fade" id="DirectorModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add New Director</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="CreateDirectorName" class="control-label">Director Name</label>
                        <input asp-for="CreateDirectorName" class="form-control" />
                        <span asp-validation-for="CreateDirectorName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CreateDirectorShortDescription" class="control-label">Director Short Description</label>
                        <input asp-for="CreateDirectorShortDescription" class="form-control" />
                        <span asp-validation-for="CreateDirectorShortDescription" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-success" data-dismiss="modal" id="addNewDirector">Create</button>
                </div>
            </div>
        </div>
    </div>


    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $("#Category").change(function () {
            var optionSelected = $("option:selected", this);
            var valueSelected = this.value;
            var textSelected = optionSelected.text();
            $("#CategoryName").val(textSelected);
            console.log($("#CategoryName").val(textSelected));
        });

        $("#Director").change(function () {
            var optionSelected = $("option:selected", this);
            var valueSelected = this.value;
            var textSelected = optionSelected.text();
            $("#DirectorName").val(textSelected);
            console.log($("#DirectorName").val(textSelected));
        });


        $("#uploadphoto").click(function () {
            //console.log("upload button click !!!");
            var data = new FormData();
            var files = $("#photoUpload").get(0).files;

            if (files.length > 0) {
                data.append("UploadedImage", files[0]);
                console.log(data);
            }

            $.ajax({
                type: "POST",
                url: "/Movies/UploadPhoto",
                contentType: false,
                processData: false,
                data: data,
                success: function (data) {
                    console.log(data.dbPath);
                    $("#PhotoURL").val(data.dbPath);
                },
                error: function () {
                    alert("error");
                }
            });
        });

        $("#addNewCategory").click(function () {
            var data = {
                name: $("#CreateCategoryName").val()
            };

            $.ajax({
                type: "POST",
                url: "/Category/CreateCategoryAJAX",
                data: data,
                dataType: "json",
                success: function (data) {
                    console.log(data);
                    $("#Category").append("<option value=" + data.id + ">" + data.name + "</option>");

                },
                error: function () {
                    alert("Error Adding New Category");
                }
            });
        });

        $("#addNewDirector").click(function () {
            var data = {
                name: $("#CreateDirectorName").val(),
                shortDescription: $("#CreateDirectorShortDescription").val()
            };

            $.ajax({
                type: "POST",
                url: "/Directors/CreateDirectorAJAX",
                data: data,
                dataType: "json",
                success: function (data) {
                    console.log(data);
                    $("#Director").append("<option value=" + data.id + ">" + data.name + "</option>");
                },
                error: function () {
                    alert("Error Adding New Director");
                }
            });
        });

    </script>
}





